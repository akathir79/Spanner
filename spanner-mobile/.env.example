# SPANNER Mobile App - Environment Variables
# Copy this file to .env and fill in your actual values

# Backend API Configuration
EXPO_PUBLIC_API_BASE_URL=https://your-spanner-backend.com
EXPO_PUBLIC_API_TIMEOUT=10000

# App Configuration
EXPO_PUBLIC_APP_NAME=SPANNER
EXPO_PUBLIC_APP_VERSION=1.0.0

# Development Configuration (for local testing)
EXPO_PUBLIC_DEV_API_URL=http://localhost:5000

# Analytics (optional)
EXPO_PUBLIC_ANALYTICS_KEY=your-analytics-key

# Feature Flags (optional)
EXPO_PUBLIC_ENABLE_VOICE_POSTING=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=false

# Debug Configuration
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL=info

# Store Configuration
EXPO_PUBLIC_ANDROID_PACKAGE=com.spanner.mobile
EXPO_PUBLIC_IOS_BUNDLE_ID=com.spanner.mobile